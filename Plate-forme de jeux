  <div id="g2048Grid" style="display:inline-block; margin:10px auto;"></div>
  <div style="margin:18px;">
    <button onclick="move2048('up')" class="arrow-btn">â¬†ï¸</button><br>
    <button onclick="move2048('left')" class="arrow-btn">â¬…ï¸</button>
    <button onclick="move2048('right')" class="arrow-btn">â¡ï¸</button><br>
    <button onclick="move2048('down')" class="arrow-btn">â¬‡ï¸</button>
  </div>
  <button onclick="start2048()">ğŸ”„ Recommencer</button>
  <div id="g2048Message" style="font-weight:bold; margin-top:10px;"></div>
